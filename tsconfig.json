{
    "compilerOptions": {
        "allowJs": true,
        "outDir": "./build",
        "module": "ES6",
        "target": "ES6",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "sourceMap": true,
        "isolatedModules": true,
        "incremental": true,
    },
    "include": ["./src/**/*"],
    "exclude": ["**/*.test.*"],
}